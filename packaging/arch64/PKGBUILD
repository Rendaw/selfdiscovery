pkgname=selfdiscovery
pkgver=1
pkgrel=1
epoch=
pkgdesc="Zarbosoft Self-Discovery: Discover Yourself"
arch=('x86_64')
url="http://www.zarbosoft.com/selfdiscovery"
license=('BSD')
groups=()
depends=('gcc-libs>=4.7.1-1')
makedepends=()
checkdepends=()
optdepends=()
provides=()
conflicts=()
replaces=()
backup=()
options=()
install=
changelog=
source=($pkgname-$pkgver.tar.gz)
noextract=()
md5sums=('')

build() {
	echo "Build selfdiscovery first then run ./package.sh, not makepkg directly." 1>&2
	return 1
}

check() {
	echo Nop 2>&- 1>&-
}

package() {
	mkdir -p $pkgdir/usr/bin/
	mv $srcdir/selfdiscovery $pkgdir/usr/bin/
	mkdir -p $pkgdir/usr/share/licenses/$pkgname
	cp $srcdir/LICENSE.txt $pkgdir/usr/share/licenses/$pkgname/
}
